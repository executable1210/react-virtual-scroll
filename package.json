{
  "name": "react-virtual-scroll",
  "version": "1.0.0",
  "description": "High-performance virtualized scroll component for React",
  "license": "MIT",

  "repository": {
    "type": "git",
    "url": "https://github.com/executable1210/react-virtual-scroll.git"
  },
  "homepage": "https://github.com/executable1210/react-virtual-scroll",
  "author": {
    "name": "exec",
    "url": "https://github.com/executable1210"
  },

  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",

  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },

  "files": ["dist"],

  "keywords": [
    "react",
    "react-component",
    "virtual-scroll",
    "windowing",
    "infinite-scroll",
    "async-scroll",
    "lazy-loading",
    "performance",
    "large-lists",
    "list-virtualization",
    "scroll",
    "ui",
    "frontend",
    "optimization"
  ],

  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts"
  },

  "peerDependencies": {
    "react": ">=17",
    "react-dom": ">=17"
  },

  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  }
}
